<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.johnny.bank.repository.resourceRepo.dataResourceRepo.IMonitorInfoRepo">
    <select id="findAll" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device;
    </select>

    <select id="getTotalCount" resultType="integer">
        SELECT COUNT(*) FROM device;
    </select>

    <select id="findById" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE uid = #{id};
    </select>

    <select id="findByIdList" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE uid IN #{ids};
    </select>

    <select id="findByCode" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE code = #{deviceCode};
    </select>

    <select id="findByCodeList" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE code IN #{deviceCodeList};
    </select>

    <select id="findByStationCode" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE station_code = #{stationCode};
    </select>

    <select id="findByStationCodeList" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE station_code IN #{stationCodeList};
    </select>

    <select id="findNewestData" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device ORDER BY begin_date DESC LIMIT 1;
    </select>

    <select id="findNewestDeviceInStation" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE station_code = #{stationCode} ORDER BY begin_date DESC LIMIT 1;
    </select>

    <select id="findDeviceByType" resultType="com.johnny.bank.model.resource.dataResource.MonitorInfo">
        SELECT * FROM device WHERE type = #{deviceType};
    </select>
</mapper>